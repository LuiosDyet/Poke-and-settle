<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <title>Document</title>
</head>

<body class="container-fluid">
    <h1 class="text-white text-center fw-bolder">Poke and fight</h1>
    <form action="/fight" method="post">
        <div class="row">

            <div class="col-lg-5 col-12">
                <h2 class="text-white fw-bold mt-5">Jugador 1</h2>
                <div class="d-flex">
                    <% for(let i = 0; i < player1Pokes.length; i++){ %>
                    <div class="col-4 card h-100 justify-content-between p-1 m-1 bg-dark bg-gradient text-white">
                        <img src="<%= `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${player1Pokes[i].id}.png` %> "
                            alt="Pokemon image">
                        <h2 class="text-capitalize fs-4 text-center mb-3" style="height: 4rem;">
                            <%= player1Pokes[i].name %>
                        </h2>
                        <div>
                            <ul class="list-group list-group-flush rounded-1 ">
                                <li class="list-group-item list-group-item-dark">vida: <%= player1Pokes[i].hp %></li>
                                <li class="list-group-item list-group-item-dark">ataque: <%= player1Pokes[i].attack %>
                                </li>
                                <li class="list-group-item list-group-item-dark">defensa: <%= player1Pokes[i].defense %>
                                </li>
                            </ul>
                        </div>
                        <div id="<%= i * 2 %>">
                            <input type="text" name="<%= i * 2 %>" id="" value="<%= player1Pokes[i].id %>"
                                class="invisible <%= currentPlayer == 1 ? "" : "hideNext" %>">
                            <select class="form-select bg-dark text-white attackingPokemon hidden hideNext"
                                aria-label="Default select" name="<%= i * 2 %>" id="<%= player1Pokes[i].id %>">
                                <option value="" selected disabled>Elegí qué hacer</option>
                                <option value="attack">
                                    Atacar</option>
                                <option value="defend">
                                    Defender
                                </option>
                                <option value="heal">
                                    Curarse</option>
                            </select>
                            <select class="form-select bg-dark text-white hidden" aria-label="Default select"
                                name="<%= i * 2 %>" id="<%= player1Pokes[i].id %>">
                                <option value="" selected disabled>Elegí contra quién</option>
                                <% player2Pokes.forEach(enemyPokemon=> { %>
                                <option value="<%= enemyPokemon.id %>">
                                    <%= enemyPokemon.name %>
                                </option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
            <div class="col-lg-2 col-12 my-5">
                <% if(log) {%>
                <ul class="list-group list-group-flush rounded-1 ">
                    <% log.forEach(event=>{ %>
                    <li class="list-group-item list-group-item-warning mb-1"><%= event %> </li>
                    <% }) %>
                </ul>

                <% } %>

            </div>
            <div class="col-lg-5 col-12 ">
                <h2 class="text-white fw-bold text-lg-end mt-5">Jugador 2</h2>
                <div class="d-flex justify-content-lg-end">
                    <% for(let i = 0; i < player2Pokes.length; i++) { %>
                    <div class="col-4 card h-100 justify-content-between p-1 m-1 bg-dark bg-gradient text-white">
                        <img src="<%= `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${player2Pokes[i].id}.png` %> "
                            alt="Pokemon image">
                        <h2 class="text-capitalize fs-4 text-center mb-3" style="height: 4rem;">
                            <%= player2Pokes[i].name %>
                        </h2>
                        <div>
                            <ul class="list-group list-group-flush rounded-1 ">
                                <li class="list-group-item list-group-item-dark">vida: <%= player2Pokes[i].hp %></li>
                                <li class="list-group-item list-group-item-dark">ataque: <%= player2Pokes[i].attack %>
                                </li>
                                <li class="list-group-item list-group-item-dark">defensa: <%= player2Pokes[i].defense %>
                                </li>
                            </ul>
                        </div>
                        <div id='<%= i * 2 + 1 %>'>
                            <input type="text" name="<%= i * 2 + 1 %>" id="" value="<%= player2Pokes[i].id %>"
                                class="invisible <%= currentPlayer == 2 ? "" : "hideNext" %>">
                            <select class="form-select bg-dark text-white attackingPokemon hidden hideNext"
                                aria-label="Default select" name="<%= i * 2 + 1 %>" id="<%= player2Pokes[i].id %>">
                                <option value="" selected disabled>Elegí qué hacer</option>
                                <option value="attack">
                                    Atacar</option>
                                <option value="defend">
                                    Defender</option>
                                <option value="heal">Curarse
                                </option>
                            </select>
                            <select class="form-select bg-dark text-white hidden" aria-label="Default select"
                                name="<%= i * 2 + 1 %>" id="<%= player2Pokes[i].id %>">
                                <option value="" selected disabled>Atacar a...</option>
                                <% player1Pokes.forEach(enemyPokemon=> { %>
                                <option value="<%= enemyPokemon.id %>">
                                    <%= enemyPokemon.name %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-danger btn-lg px-5 m-4 fs-1"
                type="submit"><%= currentPlayer == "fight" ? "Pelear" : "Pasar" %></button>
        </div>
    </form>
    <script src="/script/attackingOptions.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>